{
    "Parameters": {
        "BootstrapVersion": {
            "Default": "/cdk-bootstrap/hnb659fds/version",
            "Description": "Version of the CDK Bootstrap resources in this environment, automatically retrieved from SSM Parameter Store. [cdk:skip]",
            "Type": "AWS::SSM::Parameter::Value<String>"
        }
    },
    "Resources": {
        "CatalogApiDemoWaf": {
            "Properties": {
                "CustomResponseBodies": {
                    "RateLimitBody": {
                        "Content": "{\"error\": \"Too many requests\", \"message\": \"You have exceeded request limit. Try again later.\"}",
                        "ContentType": "APPLICATION_JSON"
                    }
                },
                "DefaultAction": {
                    "Allow": {}
                },
                "Rules": [
                    {
                        "Action": {
                            "Allow": {}
                        },
                        "Name": "allow-ips",
                        "Priority": 40,
                        "Statement": {
                            "IPSetReferenceStatement": {
                                "Arn": {
                                    "Fn::GetAtt": [
                                        "catalogapidemowafallowedips",
                                        "Arn"
                                    ]
                                }
                            }
                        },
                        "VisibilityConfig": {
                            "CloudWatchMetricsEnabled": true,
                            "MetricName": "catalog-api-demo-waf-allowed-ips",
                            "SampledRequestsEnabled": true
                        }
                    },
                    {
                        "Action": {
                            "Block": {}
                        },
                        "Name": "block-ips",
                        "Priority": 50,
                        "Statement": {
                            "IPSetReferenceStatement": {
                                "Arn": {
                                    "Fn::GetAtt": [
                                        "catalogapidemowafblockedips",
                                        "Arn"
                                    ]
                                }
                            }
                        },
                        "VisibilityConfig": {
                            "CloudWatchMetricsEnabled": true,
                            "MetricName": "catalog-api-demo-waf-blocked-ips",
                            "SampledRequestsEnabled": true
                        }
                    },
                    {
                        "Name": "AWS-AWSManagedRulesAmazonIpReputationList",
                        "OverrideAction": {
                            "None": {}
                        },
                        "Priority": 100,
                        "Statement": {
                            "ManagedRuleGroupStatement": {
                                "Name": "AWSManagedRulesAmazonIpReputationList",
                                "VendorName": "AWS"
                            }
                        },
                        "VisibilityConfig": {
                            "CloudWatchMetricsEnabled": true,
                            "MetricName": "catalog-api-demo-waf-AWS-AWSManagedRulesAmazonIpReputationList",
                            "SampledRequestsEnabled": true
                        }
                    },
                    {
                        "Name": "AWS-AWSManagedRulesAnonymousIpList",
                        "OverrideAction": {
                            "None": {}
                        },
                        "Priority": 200,
                        "Statement": {
                            "ManagedRuleGroupStatement": {
                                "Name": "AWSManagedRulesAnonymousIpList",
                                "RuleActionOverrides": [
                                    {
                                        "ActionToUse": {
                                            "Count": {}
                                        },
                                        "Name": "HostingProviderIPList"
                                    }
                                ],
                                "VendorName": "AWS"
                            }
                        },
                        "VisibilityConfig": {
                            "CloudWatchMetricsEnabled": true,
                            "MetricName": "catalog-api-demo-waf-AWS-AWSManagedRulesAnonymousIpList",
                            "SampledRequestsEnabled": true
                        }
                    },
                    {
                        "Name": "AWS-AWSManagedRulesKnownBadInputsRuleSet",
                        "OverrideAction": {
                            "None": {}
                        },
                        "Priority": 300,
                        "Statement": {
                            "ManagedRuleGroupStatement": {
                                "Name": "AWSManagedRulesKnownBadInputsRuleSet",
                                "VendorName": "AWS"
                            }
                        },
                        "VisibilityConfig": {
                            "CloudWatchMetricsEnabled": true,
                            "MetricName": "catalog-api-demo-waf-AWS-AWSManagedRulesKnownBadInputsRuleSet",
                            "SampledRequestsEnabled": true
                        }
                    },
                    {
                        "Name": "AWS-AWSManagedRulesLinuxRuleSet",
                        "OverrideAction": {
                            "None": {}
                        },
                        "Priority": 400,
                        "Statement": {
                            "ManagedRuleGroupStatement": {
                                "Name": "AWSManagedRulesLinuxRuleSet",
                                "VendorName": "AWS"
                            }
                        },
                        "VisibilityConfig": {
                            "CloudWatchMetricsEnabled": true,
                            "MetricName": "catalog-api-demo-waf-AWS-AWSManagedRulesLinuxRuleSet",
                            "SampledRequestsEnabled": true
                        }
                    },
                    {
                        "Name": "AWS-AWSManagedRulesPHPRuleSet",
                        "OverrideAction": {
                            "None": {}
                        },
                        "Priority": 500,
                        "Statement": {
                            "ManagedRuleGroupStatement": {
                                "Name": "AWSManagedRulesPHPRuleSet",
                                "VendorName": "AWS"
                            }
                        },
                        "VisibilityConfig": {
                            "CloudWatchMetricsEnabled": true,
                            "MetricName": "catalog-api-demo-waf-AWS-AWSManagedRulesPHPRuleSet",
                            "SampledRequestsEnabled": true
                        }
                    }
                ],
                "Scope": "REGIONAL",
                "VisibilityConfig": {
                    "CloudWatchMetricsEnabled": true,
                    "MetricName": "catalog-api-demo-wafMetrics",
                    "SampledRequestsEnabled": true
                }
            },
            "Type": "AWS::WAFv2::WebACL"
        },
        "catalogapidemowafallowedips": {
            "Properties": {
                "Addresses": [
                    "98.35.33.121/32"
                ],
                "Description": "Allowed IPs",
                "IPAddressVersion": "IPV4",
                "Scope": "REGIONAL"
            },
            "Type": "AWS::WAFv2::IPSet"
        },
        "catalogapidemowafblockedips": {
            "Properties": {
                "Addresses": [
                    "192.0.2.0/24",
                    "184.1.0.0/16"
                ],
                "Description": "Blocked IPs",
                "IPAddressVersion": "IPV4",
                "Scope": "REGIONAL"
            },
            "Type": "AWS::WAFv2::IPSet"
        }
    },
    "Rules": {
        "CheckBootstrapVersion": {
            "Assertions": [
                {
                    "Assert": {
                        "Fn::Not": [
                            {
                                "Fn::Contains": [
                                    [
                                        "1",
                                        "2",
                                        "3",
                                        "4",
                                        "5"
                                    ],
                                    {
                                        "Ref": "BootstrapVersion"
                                    }
                                ]
                            }
                        ]
                    },
                    "AssertDescription": "CDK bootstrap stack version 6 required. Please run 'cdk bootstrap' with a recent version of the CDK CLI."
                }
            ]
        }
    }
}